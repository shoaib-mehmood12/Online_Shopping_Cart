@model Online_Shopping_Cart.Models.AppRole

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Creating New App-Role</h4>
                <p class="card-description">
                    Role Section
                    <hr />
                </p>
                
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
