@model IEnumerable<Online_Shopping_Cart.Models.AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = null;
   
}
<!doctype html>
<html lang="en" dir="ltr">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <base href="~/themes/login/" />
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet" asp-append-version="true">

    <title>Login</title>
</head>
<body>
    <h4 class="card-title d-flex justify-content-center">Accounts</h4>
    <p class="card-description d-flex justify-content-center">
        <a asp-action="Create">Create New</a>
    </p>
    <div class="row">
        <div class="col-md-6 ">
            <div class="card d-flex justify-content-center">
                <div class="card-body">
                   
                    <table class="table    table-stripped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                             
                                    <td>
                                        <a  class="fa fa-edit"asp-action="Edit" asp-route-id="@item.Id"></a> 
                                        <a class="fa fa-eye" asp-action="Details" asp-route-id="@item.Id"></a> 
                                        <a  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
        
    </div>
    <script src="~/js/sweetalert.js"></script>
</body>
</html>
